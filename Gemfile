
source 'https://rubygems.org'

gem 'rails'
gem 'pg'

gem 'sass-rails'
gem 'uglifier'
gem 'haml-rails'
gem 'html5-rails'
gem 'browsernizer'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

gem 'unicorn'
gem 'devise'
gem 'inherited_resources'
gem 'rmagick'

group :development, :test do
  gem 'rspec-rails'
  gem 'database_cleaner'
  gem 'factory_girl_rails'
  gem 'capybara'
end

group :deployment do
  gem 'capistrano'
end
